@using System.Data
@using Microsoft.AspNetCore.Html
@model dynamic
@{
    ViewData["Title"] = "Data page";
}
<h3 style="color: #0f5132; padding-bottom: 20px">Properties of 
    @{ HtmlString htmlString = new HtmlString(Model.Rows[0][0].ToString());} @htmlString</h3>
@if (Model!= null)
{
    <table class="table table-bordered">
        <thead>
        <tr>
            @foreach (DataColumn col in Model.Columns)
            {
                <th>@col.Caption</th>
            }
        </tr>
        </thead>
        <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                @foreach (var cell in row.ItemArray)
                {
                    @if (cell != null && cell.ToString()!="")
                    {
                        <td>
                            @{ HtmlString html = new HtmlString(cell.ToString()); }
                            @html
                        </td>
                    }
                    else
                    {
                        <td>-</td>
                    }
                }
            </tr>
        }
        </tbody>
    </table>
}
